/* pages/company/show/index.wxss */
@import '../../../wxParser/index.wxss';
page{background: #FFF;}
/* 大背景图 */
.bigthumb{width:100%;height:230rpx;}
.bigthumb image{width:100%;height:100%;}

/* 企业LOGO */
.show-logo{position: absolute;width:240rpx;height:180rpx;top:60rpx;border:2rpx solid #EEE;z-index: 12;border-radius: 20rpx;overflow: hidden;}
.show-logo image{width:100%;height:100%;}

/* 内容 */
.show-content{width:100%;height:500rpx;background: #FFF;z-index: 11;border-top-left-radius: 50rpx;border-top-right-radius: 50rpx;margin-top:-50rpx;}

/* 公司上部分 */
.show-company{width:680rpx;margin: 86rpx auto 40rpx;height:116rpx;}
.show-company-thumb{width:76rpx;float:left;color:#FFF;text-align: center;font-size:26rpx;height:116rpx;line-height: 28rpx;padding:0 2rpx;}
.show-company-thumb image{width:36rpx;height:30rpx;margin:auto;margin-top:10rpx;}

.li-title{float:left;width:480rpx;padding-left:20rpx;overflow: hidden;}
.company-name{width:100%;font-size:30rpx;line-height: 36rpx;height:72rpx;overflow: hidden;}
.company-xj{color:#999;font-size:30rpx;height:40rpx;overflow: hidden;position: relative;line-height: 40rpx;margin-top:4rpx;}
.company-xj image{width: 144rpx;height:32rpx;position: absolute;top:4rpx;left:130rpx;}

.li-card{float:right;padding-left:20rpx;font-size:26rpx;color:#3A99EB;width:80rpx;margin-top:12rpx;text-align: center}
.li-card image{width:50rpx;height:50rpx;margin:auto}

.xian{width:100%;clear:both;height:10rpx;background:#F9F9F9;}

/* Menu  */
.menu{width:100%;height:90rpx;line-height:90rpx;border-bottom: 2rpx solid #F9F9F9;}
.menu view{width:33.3%;float:left;text-align: center;font-size:32rpx;}
.menu .selected{color:#E65617;position: relative;}
.menu .selected::before{position: absolute;content: '';width:20%;bottom: 0;height: 4rpx;background: #E65617;left:40%;}

.show-menu-content{width: 100%;margin:40rpx auto;}

/* 企业信息 */
.menu-title{font-size:36rpx;margin-left:35rpx;}
.company-content{margin:30rpx auto;width:680rpx;font-size:30rpx;word-wrap:break-word}
.show-book-box{width:680rpx;margin:10rpx auto 30rpx;}
.show-book{width:210rpx; display: inline-block;margin-left:25rpx;margin-top:20rpx;font-size: 28rpx;}
.show-book image{width:100%;height:158rpx;}
/* 业绩动态 */
.dynamic-box{width:680rpx;margin:auto;}
.dynamic-li{width:620rpx;padding-left:60rpx;font-size:30rpx;margin-top:20rpx; position: relative;}
.dynamic-li::before{position: absolute;content:''; width:16rpx;height:16rpx;border:6rpx solid #F1AA8A; left:0;top:4rpx;border-radius: 50%;}
.dynamic-title{line-height: 36rpx;word-wrap:break-word;}
.dpp{position: relative;width:620rpx;padding-left:60rpx;font-size:30rpx;margin-top:20rpx; }
.dpp::before{position: absolute;content:''; width:16rpx;height:16rpx;border:6rpx solid #F1AA8A; left:0;top:4rpx;border-radius: 50%;}
.dpp::after{width:4rpx;background: #F1AA8A;height: 100%;content:'';top:26rpx;left:12rpx;position: absolute;}
.dynamic-time{color:#999;font-size:24rpx;margin-top:4rpx;}


/* 产品库 */
.product-box{width:680rpx;margin:auto;word-wrap:break-word}
.show-product{float:left;height:200rpx;overflow: hidden;width:210rpx; margin-left:25rpx;margin-bottom:20rpx;font-size: 28rpx;}
.show-product image{width:100%;height:158rpx;}
