/* pages/index/ArticleShow/index.wxss */
@import '../../../wxParser/index.wxss';

.ArticleBox{background: #FFF;width:100%;}
.ArticleTitle{width:690rpx;margin:auto;font-size:40rpx; padding:20rpx 0;}
.ArticleDes{width:690rpx;margin:auto;font-size:28rpx;color:#999;height:40rpx;}
.ArticleFrom{float:left;}
.ArticleTime{float:left;}
.ArticleContent{word-wrap:break-word;width:690rpx;margin:auto; padding:30rpx 0;}

.Related{background: #FFF;width:100%;margin-top:20rpx;padding-bottom: 10rpx;}
.RelatedTitle{width:690rpx;margin: auto;text-align: left;font-size:36rpx;color:#E65617;padding:40rpx 0;}
.RelatedList{width:690rpx;margin:0 auto 30rpx;height:120rpx;font-size:30rpx;}
.ListLeft{width:150rpx;float:left;}
.ListLeft image{width:150rpx;height: 113rpx;}
.ListRight{width:510rpx;height: 114rpx;float:left;padding-left:30rpx;line-height:44rpx;padding-top:10rpx;height:90rpx;overflow: hidden}

.CommentBox{background: #FFF;width: 100%;margin-top:20rpx;padding-bottom: 20rpx;}
.MineComment{height:160rpx;width:100%;}
.MyComment{width:540rpx;float:left;background: #F1F1F1;height:80rpx;margin-top:48rpx;border:2rpx solid #DDD;}
.MyComment input{width:440rpx;background: #F1F1F1;color:#999;float:left;height:80rpx;padding:0 10rpx;}
.MyComment button{float:left;background: #F1F1F1;width: 80rpx;border-radius: 0;padding:0;height:80rpx;line-height: 80rpx;color:#999;font-size:30rpx;border-left: 2rpx solid #DDD;}
.MyComment button::after{border: 0;}
.Avatar{width:100rpx;height:100rpx;border-radius: 50%;overflow: hidden;border:6rpx solid #FFF;margin:30rpx 30rpx;float:left;}

.Xian{width:690rpx;margin:auto;height:2rpx;background:  #EEE;}

.CommentList{width:690rpx;margin:auto;height:200rpx;border-bottom: 2rpx solid #EEE;}
.CommentName{float:left;font-size:36rpx;width: 50%;margin-top:40rpx;height:50rpx;line-height: 50rpx;}
.CommentTime{float:right;font-size:28rpx;color:#999;width: 50%;text-align: right;margin-top:40rpx;height:50rpx;line-height: 50rpx}
.CommentMsg{float:left;margin-top:30rpx;font-size:30rpx;text-align: left;}

.Cz{float:right; margin-top: -2rpx;}
.Cz button{float:left;background: #FFF;font-size:28rpx;padding:4rpx 20rpx;border-radius: 40rpx;border:2rpx solid #4A9FE8;height:46rpx;line-height: 38rpx;color:#4A9FE8}
.Cz button::after{border:none}
.Cz button image{width:34rpx;height:34rpx;float:left;margin-top:2rpx;}
